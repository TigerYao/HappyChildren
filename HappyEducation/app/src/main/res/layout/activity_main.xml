<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.dachuwang.children.education.launcher.ChildrenEduLauncherFragment"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wallpaper"
        android:src="@mipmap/bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <fragment
        android:id="@+id/fragment"
        android:name="com.dachuwang.software.yaohu.happyeducation.modelview.HorizontalLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:layout="@layout/layout_horizontal" />
    <include layout="@layout/toolbar" />

</FrameLayout>