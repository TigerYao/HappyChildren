<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="RecyclerViewPager">
        <attr name="triggerOffset" format="float" />
        <attr name="flingFactor" format="float" />
    </declare-styleable>
    <declare-styleable name="CirclePageIndicator">
        <attr name="indicator_spacing" format="dimension" />
        <attr name="indicator_drawable_normal" format="reference" />
        <attr name="indicator_drawable_selector" format="reference" />
        <attr name="indicator_type" format="enum">
            <enum name="circle" value="0" />
            <enum name="fraction" value="1" />
        </attr>
    </declare-styleable>
</resources>
